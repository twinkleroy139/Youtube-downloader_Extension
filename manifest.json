{
  "manifest_version": 3,
  "name": "YouTube Video Downloader",
  "description": "Download YouTube videos via keyword or URL in various qualities (no merging required).",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/ytLogo1.png",
      "48": "icons/Adobe Express - file.png",
      "128": "icons/Adobe Express - file.png"
    }
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:10000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/ytLogo1.png",
    "48": "icons/Adobe Express - file.png",
    "128": "icons/Adobe Express - file.png"
  }
}