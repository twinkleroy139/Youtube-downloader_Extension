{
  "manifest_version": 3,
  "name": "YouTube Video Downloader",
  "version": "1.0",
  "description": "Safely download YouTube videos using your own API server.",
  "permissions": ["activeTab", "scripting", "downloads", "storage"],
  "host_permissions": ["https://yt-server-qo6z.onrender.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
